<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/mainBackground</item>
        <item name="android:statusBarColor">@color/colorKcl</item>
    </style>

    <style name="AppTheme.noActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.cardTheme" parent="AppTheme">
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="AlertMenu" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="MenuText">
        <item name="android:textColor">@color/mainBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

</resources>
